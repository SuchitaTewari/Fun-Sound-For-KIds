<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#060606"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#060606"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnAnimal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:radius="20dp"
            android:background="@drawable/animal_icon"
             />
        <Button
            android:id="@+id/btnBird"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/birds_icon"
            />
        <Button
            android:id="@+id/btnPeople"
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:background="@drawable/people_icon"
            android:layout_marginLeft="30dp"
            android:text="People" />

    </LinearLayout>
    <fragment
        android:name="project.suchita.com.funsoundforkids.HomeFragment"
        android:id="@+id/fragment_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
